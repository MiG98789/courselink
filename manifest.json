{
    "manifest_version": 2,

    "name": "Rate My HKUST Course",
    "version": "0.1",
    "description": "A Chrome extension to view HKUST course ratings directly on the course catalog webpage",

    "browser_action": {
        "default_title": "Rate My HKUST Course"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [
        {
            "matches": ["*://w5.ab.ust.hk/wcq/cgi-bin/1710/*"],
            "js": ["main.js"]
        }
    ],

    "permissions": [
        "activeTab"
    ]
}
